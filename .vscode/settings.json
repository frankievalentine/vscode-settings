{
  // ========== Visuals ==========
  "editor.cursorStyle": "underline",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.wordWrap": "on",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontFamily": "'Geist Mono Medium', Menlo, Monaco, 'Courier New', monospace",
  "editor.lineNumbers": "interval",
  "editor.renderWhitespace": "boundary",
  "workbench.fontAliasing": "antialiased",
  "workbench.iconTheme": "bearded-icons",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.list.smoothScrolling": true,
  "workbench.colorTheme": "Monochrome Dark",
  "workbench.preferredLightColorTheme": "Vercel 2024 Light",
  "workbench.preferredDarkColorTheme": "Bearded Theme Monokai Black",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tree.expandMode": "singleClick",
  "workbench.tree.indent": 10,
  "window.title": "${rootName}",
  "window.autoDetectColorScheme": true,
  "window.zoomLevel": -0.5,
  "window.newWindowDimensions": "maximized",

  // ========== Editor ==========
  "debug.onTaskErrors": "debugAnyway",
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.find.addExtraSpaceOnTop": false,
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.accessibilitySupport": "off",
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.tabSize": 2,
  "editor.stickyScroll.enabled": true,
  "editor.hover.delay": 1000,
  "editor.hover.sticky": true,
  "explorer.compactFolders": false,
  "explorer.autoReveal": false,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 10000,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.untrackedChanges": "separate",
  "scm.diffDecorationsGutterWidth": 2,
  "terminal.integrated.fontFamily": "'IBM Plex Mono', Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,
  "search.exclude": {
    "**/*.snap": true,
    "**/*.svg": true,
    "**/.git": true,
    "**/.github": false,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/assets": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/public": true,
    "**/temp": true,
    "**/yarn.lock": true,
    "**/CHANGELOG*": true,
    "**/LICENSE*": true
  },

  // ==========  Global Level Config ==========
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.enabled": false,
  "window.dialogStyle": "custom",
  "window.nativeTabs": true, // this is great, macOS only
  "window.titleBarStyle": "custom",
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.autoCheckUpdates": true,

  // Astro
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },

  // Prettier
  "[html][css][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Biome
  "[json][javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.removeUnusedImports": "explicit",
    "source.organizeImports": "explicit"
  },

  // ========== Extension configs ==========
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": false,
  "css.lint.unknownAtRules": "ignore",
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "typescript.inlayHints.parameterNames.enabled": "all",

  // ========== File Nesting (Disabled for now) ==========
  "explorer.fileNesting.enabled": false,
  "explorer.fileNesting.expand": false,

  // ========== Telemetry ==========
  "telemetry.telemetryLevel": "off",
  "cody.telemetry.level": "off",
  "redhat.telemetry.enabled": false,
  "update.showReleaseNotes": false
}
